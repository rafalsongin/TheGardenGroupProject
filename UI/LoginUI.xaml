<Window x:Class="UI.LoginUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="App name" Height="450" Width="600" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="ButtonLogin" Content="Login" HorizontalAlignment="Left" Margin="256,326,0,0" VerticalAlignment="Top" Height="29" Width="107" FontSize="16" AutomationProperties.Name="buttonLogin" Background="#FF169BD5" Foreground="White"/><!--Click="buttonLogin_Click"-->
        <TextBox x:Name="TextBoxUsername" HorizontalAlignment="Center" Margin="0,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="216" Height="24" FontSize="16" AutomationProperties.Name="textBoxUsernameInput"/> <!--TextChanged="textBoxUsername_TextChanged"-->
        <Label x:Name="LabelHeading" Content="NoDesk: TGG" HorizontalAlignment="Center" Margin="0,26,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20"/>
        <TextBox x:Name="TextBoxPassword" HorizontalAlignment="Center" Margin="0,227,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="216" Height="24" FontSize="16" AutomationProperties.Name="textBoxPasswordInput"/> <!--TextChanged="textBoxPassword_TextChanged"-->
        <Label x:Name="LabelEnterPassword" Content="Password&#xD;&#xA;&#xA;" HorizontalAlignment="Left" Margin="192,0,0,0" VerticalAlignment="Center" AutomationProperties.Name="labelLogin" Height="31" RenderTransformOrigin="0.579,-0.174" FontSize="14"/>
        <Label x:Name="LabelEnterUsername" Content="Username&#xD;&#xA;&#xA;" HorizontalAlignment="Left" Margin="192,136,0,0" VerticalAlignment="Top" AutomationProperties.Name="labelLogin" Height="31" RenderTransformOrigin="0.579,-0.174" FontSize="14"/>
        <CheckBox x:Name="CheckBoxRememberMe" Content="Remember Me" HorizontalAlignment="Left" Margin="179,278,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LabelHeading2" Content="Please provide login credentials to login to &#xD;&#xA;NoDesk for The Garden Group" Margin="152,75,0,0" VerticalAlignment="Top" FontSize="16" AutomationProperties.Name="labelLogin" Height="56" RenderTransformOrigin="0.579,-0.174" FontWeight="Bold" Width="339" HorizontalAlignment="Left"/>
        <Label x:Name="LabelForgotLoginDetails" Content="Forgot Login Details?" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="317,270,0,0" VerticalAlignment="Top" AutomationProperties.Name="labelLogin" Height="31" RenderTransformOrigin="0.579,-0.174"/> <!--MouseLeftButtonUp="labelForgotLoginDetails_MouseLeftButtonUp"-->
        <ListBox x:Name="ListBoxAllDbTest" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,63,426,63"/> <!--SelectionChanged="listBoxAllDBTest_SelectionChanged"-->
    </Grid>
</Window>
