<Page x:Class="TheGardenGroupProject.NewUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="NewUserUI" Height="450" Width="800">
    <Grid>
        <Label x:Name="Dashboard" Content="Dashboard" HorizontalAlignment="Left" Margin="30,58,0,0"
               VerticalAlignment="Top" Height="28" Width="81" />
        <Label x:Name="ViewUser" Content="View Users" HorizontalAlignment="Left" Margin="30,98,0,0"
               VerticalAlignment="Top" Height="28" Width="81" />
        <Label x:Name="AddUser" Content="Add User" HorizontalAlignment="Left" Margin="30,139,0,0"
               VerticalAlignment="Top" Height="28" Width="81" />
        <Label x:Name="AddTicket" Content="Add Ticket" HorizontalAlignment="Left" Margin="30,178,0,0"
               VerticalAlignment="Top" Height="28" Width="81" />
        <Label x:Name="CrudTickets" Content="CRUD Tickets" HorizontalAlignment="Left" Margin="30,217,0,0"
               VerticalAlignment="Top" Height="28" Width="81" />
        <GridSplitter HorizontalAlignment="Left" Height="434" Margin="145,0,0,0" VerticalAlignment="Center" Width="5"
                      RenderTransformOrigin="0.5,0.5">
            <GridSplitter.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="0.018" />
                    <TranslateTransform />
                </TransformGroup>
            </GridSplitter.RenderTransform>
        </GridSplitter>
        <Label x:Name="CreateNewUser" Content="Create new user" HorizontalAlignment="Left" Margin="273,51,0,0"
               VerticalAlignment="Top" Height="42" Width="200" FontSize="24" FontWeight="Bold" />
        <Label x:Name="FirstName" Content="First name:" HorizontalAlignment="Left" Margin="273,101,0,0"
               VerticalAlignment="Top" Height="28" Width="81" />
        <Label x:Name="LastName" Content="Last name:" HorizontalAlignment="Left" Margin="273,134,0,0"
               VerticalAlignment="Top" Height="28" Width="81" />
        <Label x:Name="TypeOfUser" Content="Type of user:" HorizontalAlignment="Left" Margin="273,167,0,0"
               VerticalAlignment="Top" Height="28" Width="81" />
        <Label x:Name="EmailAddress" Content="E-mail address:" HorizontalAlignment="Left" Margin="273,200,0,0"
               VerticalAlignment="Top" Height="28" Width="90" />
        <Label x:Name="PhoneNumber" Content="Phone number:" HorizontalAlignment="Left" Margin="273,233,0,0"
               VerticalAlignment="Top" Height="28" Width="93" />
        <Label x:Name="Location" Content="Location/branch:" HorizontalAlignment="Left" Margin="273,266,0,0"
               VerticalAlignment="Top" Height="28" Width="101" />
        <Label x:Name="SendPassword" Content="Send password?" HorizontalAlignment="Left" Margin="273,299,0,0"
               VerticalAlignment="Top" Height="28" Width="101" />
        <TextBox x:Name="FirstName_txt" HorizontalAlignment="Left" Margin="395,105,0,0" TextWrapping="Wrap"
                 VerticalAlignment="Top" Width="187" />
        <TextBox x:Name="LastName_txt" HorizontalAlignment="Left" Margin="395,139,0,0" TextWrapping="Wrap"
                 VerticalAlignment="Top" Width="187" />
        <TextBox x:Name="EmailAddress_txt" HorizontalAlignment="Left" Margin="395,206,0,0" TextWrapping="Wrap"
                 VerticalAlignment="Top" Width="187" />
        <TextBox x:Name="PhoneNumber_txt" HorizontalAlignment="Left" Margin="395,238,0,0" TextWrapping="Wrap"
                 VerticalAlignment="Top" Width="187" />
        <CheckBox x:Name="SendPassword_CheckBox" Content="yes, a password e-mail will be sent to the user"
                  HorizontalAlignment="Left" Margin="395,305,0,0" VerticalAlignment="Top" />
        <ComboBox x:Name="TypeOfUse_combo" HorizontalAlignment="Left" Margin="395,172,0,0" VerticalAlignment="Top"
                  Width="187" Height="18">
            <ComboBoxItem Content="Service Desk Employee" />
            <ComboBoxItem Content="Company Employee" />
            <ComboBoxItem Content="Manager" />
        </ComboBox>
        <ComboBox x:Name="Location_combo" HorizontalAlignment="Left" Margin="395,271,0,0" VerticalAlignment="Top"
                  Width="187" Height="18">
            <ComboBoxItem Content="Haarlem" />
            <ComboBoxItem Content="Amsterdam" />
            <ComboBoxItem Content="Den Haag" />
            <ComboBoxItem Content="Rotterdam" />
            <ComboBoxItem Content="Eindhoven" />
        </ComboBox>
        <Button x:Name="AddUser_btn" Content="ADD USER" HorizontalAlignment="Left" Margin="509,345,0,0"
                VerticalAlignment="Top" Height="33" Width="103" Background="#FF7FC08B" FontWeight="Bold"
                Click="AddUser_btn_Click" />
        <Button x:Name="Cancel_btn" Content="CANCEL" HorizontalAlignment="Left" Margin="358,345,0,0"
                VerticalAlignment="Top" Height="33" Width="103" FontWeight="Bold" Background="#FFFFFCFC"
                BorderBrush="#FFB2B2B2" />

    </Grid>
</Page>