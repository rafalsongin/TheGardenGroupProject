<Page x:Class="TheGardenGroupProject.ViewTicketsForEmployeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TheGardenGroupProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewTicketsForEmployeePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="717*"/>
            <ColumnDefinition Width="83*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Grid x:Name="EmployeeFilterView" Grid.ColumnSpan="2">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="allButton"  Content="All" Width="150" Click="AllTickets_Click" Height="35"/>
                    <Button x:Name="openButton" Content="Open" Width="150" Click="OpenTickets_Click" Height="35"/>
                    <Button x:Name="closedButton" Content="Closed" Width="150" Click="ClosedTickets_Click" Height="35"/>
                    <Button x:Name="ownButton" Content="Own" Width="150" Click="OwnTickets_Click" Height="35"/>
                    <Button x:Name="everyButton" Content="Every" Width="150" Click="EveryTickets_Click" Height="35"/>
                </StackPanel>
            </Grid>
            <ListView x:Name="viewTicketsListView" Grid.ColumnSpan="2" Height="250" Width="800">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Title" Width="250" DisplayMemberBinding="{Binding Subject}"/>
                        <GridViewColumn Header="Type" Width="100" DisplayMemberBinding="{Binding IncidentType}"/>
                        <GridViewColumn Header="Priority" Width="100" DisplayMemberBinding="{Binding Priority}"/>
                        <GridViewColumn Header="Date added" Width="100" DisplayMemberBinding="{Binding ReportedOn, StringFormat='dd-MM-yyyy'}"/>
                        <GridViewColumn Header="Last updated" Width="100" DisplayMemberBinding="{Binding LastUpdated, StringFormat='dd-MM-yyyy'}"/>
                        <GridViewColumn Header="Status" Width="100" DisplayMemberBinding="{Binding Status}"/>
                    </GridView>
                </ListView.View>
            </ListView>            
        </StackPanel>    
    </Grid>
</Page>
